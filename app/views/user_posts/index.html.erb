<!-- マイページは青基調の色に設定 -->
<div class="mypage-thema">
	<div class="container">
		<div class="row">
			<div class="col-lg-3">
				<div class="menu-bar">
					<ul>
						<li><%= link_to "マイページ", user_path(current_user.id) %></li>
						<li><%= link_to "新規投稿", new_post_path %></li>
						<li><%= link_to "グループ一覧", joins_path %></li>
					</ul>
				</div>
			</div>
			<div class="col-lg-9">
				<% @posts.user_posts.each do |user_post| %>
				<% if user_post.joined_by?(current_user).exists? %>
					<section class="post">
						<%= user_post.post.group_name %>
					</section>
				<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>