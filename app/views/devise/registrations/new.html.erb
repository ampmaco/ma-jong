<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <section class="post">

      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <table class="table-space">
          <tr>
            <td><%= f.label :user_name, "名前" %></td>
            <td><%= f.text_field :user_name, autofocus: true %></td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <%= f.password_field :password %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "パスワード確認" %></td>
            <td><%= f.password_field :password_confirmation %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn bg-success" %></td>
          </tr>
         </table>
      <% end %>

      <%= link_to "ログインページへ", user_session_path %>

      </section>
    </div>
  </div>
</div>