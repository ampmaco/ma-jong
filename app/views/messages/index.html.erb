<!-- マイページは青基調の色に設定 -->
<div class="mypage-thema">
	<div class="container">
		<div class="row">
			<div class="col-lg-3">
				<div class="menu-bar">
					<ul>
						<li><%= link_to "マイページ", user_path(current_user.id) %></li>
						<li><%= link_to "新規投稿", new_post_path %></li>
						<li><%= link_to "グループ一覧", user_posts_path %></li>
					</ul>
				</div>
			</div>
			<div class="col-lg-9">
				<section class="post">
					<h2>グループチャット</h2>
					<%= form_for(@message, url: post_messages_path(@post.id), method: :post) do |f| %>
						<table class="table-space">
							<tr>
								<td><%= f.label :body, "メッセージ：" %></td>
								<td>
									<%= f.text_area :body %>
									<%= f.submit "投稿" %>
								</td>
							</tr>
						</table>
					<% end %>
				</section>
				<% @messages.each do |message| %>
					<div class="post">
						<table class="table-space">
							<tr>
								<td>
									<p class="text-center"><%= attachment_image_tag(message.user, :image, :fill, 400, 400, format: 'jpeg', fallback: "no_image.jpg") %></p>
									<p class="text-center"><%= message.user.user_name %></p>
								</td>
								<td>
									<%= simple_format(message.body) %>
								</td>
							</tr>
							<tr>
								<td></td>
								<td>
									<% if message.user == current_user %>
										<%= link_to message_path(message.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
											<button class="btn bg-danger fr">削除</button>
										<% end %>
										<%= link_to edit_message_path(message.id) do %>
											<button class="btn bg-info fr">編集</button>
										<% end %>
									<% end %>
								</td>
							</tr>
						</table>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>